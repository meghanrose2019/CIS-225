/**
 * A program for Rick Hammer to compute prices of desks.
 *
 * @author Meghan Reed
 * @version 2020.01.31
 */
public class Desks
{
    // The price of a desk.
    private int price;
    // The width of the desk
    private int width;
    // The length of the desk
    private int length;
    // The type of wood for desk
    private string woodType;
    //The number of drawers
    private int drawers;

    /**
     * Constructor for objects of class Desks
     */
    public Desks()
    {
        // Desk Variables
        price = 200;
        return Total();
      
        
    }

    /**
     * Asks for length of desk inches
     */
    public int getLength()
    {
        return length;
    }
    
    /**
     * Asks for width of desk inches
     */
    public int getWidth()
    {
        return width;
    }
    
    /**
     * If statement for surface area
     */
    public int getArea()
    {
        if (width * length > 750)
            price = price + 50;
        else 
            return price;
    }
    
    /**
     * If statement for woodType
     */
    public int getWood()
    {
        if (woodType = "p")
            return price;
        else if (woodType = "o") 
            price = price + 125;
        else if (woodType = "m")
            price = price + 150;
    }
    
    /**
     * While loop for drawers
     */
    public int getDrawers()
    {
        while (drawers > 0)
            price = price + 30;
        return price;
    }
    
    /**
     * The total price
     */
    public int Total()
    {
        return price;
    }
}
